

<table class ="table table-striped table-condensed" >
  <div class="sticker"> HY's To-Do-List</div>
      
  <tr>
    <td>Done</td>
    <td>Title</td>
    <td>Due Date</td>
    <td>Note</td>
    <td>Content</td>
    <td>Update</td>
    <td>Delete</td>
  </tr>


<% @items.each do |item|%>
  <tr>
     <td><%= check_box_tag :mark, true , item.mark, data: { url: mark_item_path(item), method: :post, remote: true } %></td>
     <td><%= item.title %></td>
     <td><%= item.duedate %></td>
     <td><%= item.note %></td>
     <td><%= link_to 'Show', item_path(item) %></td>
     <td><%= link_to 'Edit', edit_item_path(item) %></td>
     <td><%= link_to 'X', item_path(item), method: :delete, data:{ confirm: "Are you sure?" } %></td>
     

  </tr>
<% end %>
</table>


<%= link_to 'Add New list', new_item_path, class: 'btn btn-default' %>
<%= link_to 'Delete', check_box_tag(:done, 1), method: :delete, data:{ confirm: "Are you sure?" } %>

