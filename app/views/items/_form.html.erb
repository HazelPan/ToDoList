<div class="form container">
<%= form_for @item do |f| %>

  <div class="form-group"> 
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :duedate, "Due Date" %>
    <%= f.text_field :duedate, class: "form-control" %>
    
  </div>
  
  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :note, "Note" %>
    <%= f.text_field :note, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :file_location, "File Location" %>
    <%= f.file_field :file_location %>
  </div>
  
   
    <%= f.submit  %>
    <%=link_to 'Back to index', items_path, class: 'btn btn-default'  %>


<% end %>
 
<% if @item.errors.present? %>
  <ul>
    <% @item.errors.each do |error, message| %>
      <li> <%= "#{error.capitalize}  #{message}" %></li>
    <% end %>
  </ul>
<% end %>